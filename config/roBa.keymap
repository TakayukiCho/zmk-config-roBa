#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
};

/ {
    combos {
        compatible = "zmk,combos";

        tab {
            bindings = <&kp TAB>;
            key-positions = <11 12>;
        };

        shift_tab {
            bindings = <&kp LS(TAB)>;
            key-positions = <12 13>;
        };

        muhennkann {
            bindings = <&to_layer_0 INT_MUHENKAN>;
            key-positions = <11 10>;
        };

        double_quotation {
            bindings = <&kp DOUBLE_QUOTES>;
            key-positions = <20 21>;
        };

        eq {
            bindings = <&kp EQUAL>;
            key-positions = <24 25>;
        };

        escape {
            bindings = <&kp ESCAPE>;
            key-positions = <18 19>;
        };
    };

    macros {
        to_layer_0: to_layer_0 {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings = <&to 0 &macro_param_1to1 &kp MACRO_PLACEHOLDER>;
            label = "TO_LAYER_0";
        };
    };

    behaviors {
        lt_to_layer_0: lt_to_layer_0 {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TO_0";
            bindings = <&mo>, <&to_layer_0>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q            &kp W         &kp E             &kp R             &kp T                                                                          &kp Y        &kp U  &lt 5 I    &kp O    &kp P
&mt LC(LCTRL) A  &kp S         &kp D             &kp F             &kp G        &kp LS(LG(S))                   &kp MINUS                         &kp H        &kp J  &kp K      &kp L    &kp SEMICOLON
&kp Z            &kp X         &kp C             &kp V             &kp B        &mt LC(LA(LEFT_GUI)) GRAVE      &mt LG(LC(LA(LEFT_SHIFT))) EQUAL  &kp N        &kp M  &kp COMMA  &kp DOT  &kp SINGLE_QUOTE
&kp LEFT_SHIFT   &kp LEFT_ALT  &kp LEFT_COMMAND  &lt 1 INT_HENKAN  &lt 2 SPACE  &mt CAPSLOCK INT_MUHENKAN       &kp BACKSPACE                     &lt 2 ENTER                             &kp SLASH
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PAGE_DOWN>;
        };

        Number {
            bindings = <
&trans        &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &trans                       &kp PERCENT  &kp PLUS              &kp MINUS              &kp ASTERISK  &kp SLASH
&trans        &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &trans  &trans      &kp F13  &kp LEFT     &kp DOWN              &kp UP_ARROW           &kp RIGHT     &kp EQUAL
&kp NUMBER_0  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &trans  &trans      &trans   &kp N0       &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp NUMBER_3  &kp EQUAL
&trans        &trans        &trans        &trans        &trans  &trans      &trans   &trans                                                                  &kp PERCENT
            >;
        };

        Mark {
            bindings = <
&kp MINUS                   &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp PLUS                                                  &kp CARET         &kp AMPERSAND      &kp LEFT_PARENTHESIS  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
&kp EXCLAMATION             &kp AT_SIGN      &kp HASH         &kp DOLLAR       &kp PERCENT  &kp LC(LA(KP_NUMBER_0))      &kp UNDERSCORE  &kp CARET         &kp AMPERSAND      &kp ASTERISK          &kp LEFT_BRACKET      &kp RIGHT_BRACKET
&mt LEFT_SHIFT KP_NUMBER_0  &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp PERIOD   &kp EQUAL                    &trans          &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp LEFT_BRACE        &kp LEFT_BRACE        &kp RIGHT_BRACE
&trans                      &trans           &trans           &trans           &trans       &trans                       &trans          &trans                                                                           &kp PIPE
            >;
        };

        FNmedia {
            bindings = <
&kp C_BRI_DEC   &kp C_BRI_INC           &kp UP_ARROW  &kp LC(TAB)              &ext_power EP_TOG                            &kp C_BRIGHTNESS_INC  &trans        &kp C_MUTE  &kp K_VOLUME_DOWN  &kp K_VOLUME_UP
&kp F1          &kp F2                  &kp F3        &kp F4                   &kp F5             &trans      &kp F6        &kp F7                &kp F8        &kp F9      &kp F10            &kp F11
&kp LEFT_SHIFT  &kp LG(LS(LEFT_ARROW))  &trans        &kp LG(LS(RIGHT_ARROW))  &trans             &trans      &bt BT_SEL 0  &bt BT_SEL 1          &bt BT_SEL 3  &trans      &trans             &kp F12
&trans          &trans                  &trans        &trans                   &trans             &trans      &trans        &trans                                                             &trans
            >;

            sensor-bindings = <&inc_dec_kp LC(PAGE_UP) LC(PAGE_DOWN)>;
        };

        MOUSE {
            bindings = <
&trans  &trans  &trans  &trans  &trans                      &trans  &trans    &trans    &trans    &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &mkp MB1  &mkp MB3  &mkp MB2  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans    &trans    &trans    &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans                                &trans
            >;

            sensor-bindings = <&inc_dec_kp LG(PAGE_UP) PAGE_DOWN>;
        };

        SCROLL {
            bindings = <
&trans  &trans  &trans  &trans  &trans                      &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans                          &trans
            >;
        };

        layer_6 {
            bindings = <
&trans  &trans        &trans        &trans        &trans                           &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&trans  &trans        &trans        &trans        &trans  &trans      &trans       &trans        &trans        &trans        &trans        &trans
&trans  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &trans  &trans      &bootloader  &trans        &trans        &trans        &trans        &bt BT_CLR
&trans  &trans        &trans        &trans        &trans  &trans      &trans       &trans                                                  &bt BT_CLR_ALL
            >;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        FNMedia {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};
